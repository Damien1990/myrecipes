<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to 'my<span style="font-weight: 400; color: #CB7C3A">Recipes</span>'.html_safe, root_path, id: "logo" %>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
          Styles <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Style.all.each do |style| %>
            <li><%= link_to style.name, style_path(style) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to(new_style_path) do %>
               New Style
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
      <li class="dropdown">
        <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
          Ingredients <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Ingredient.all.each do |ingredient| %>
            <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to(new_ingredient_path) do %>
               New Ingredient
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
    <% if logged_in? %>
      <%= active_link_to "New Recipe", new_recipe_path, :wrap_tag => :li %>
      <li class="dropdown">
        <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
          <%= current_user.chefname %> <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <li><%= link_to "View Profile", chef_path(current_user) %></li>
          <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
      </li>
    <% else %>
      <%= active_link_to "Log in", login_path, :wrap_tag => :li %>
    <% end %>
    </ul>
  </div>
</header>